{
    "name": "zing/laravel-sentry",
    "description": "Provides sentry context middleware.",
    "keywords": ["laravel", "sentry"],
    "license": "MIT",
    "authors": [
        {
            "name": "zingimmick",
            "email": "zingimmick@outlook.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "illuminate/container": "^6.19 || ^7.0 || ^8.11",
        "sentry/sentry-laravel": "^2.0"
    },
    "require-dev": {
        "mockery/mockery": "~1.3.3 || ^1.4.2",
        "orchestra/testbench": "^4.0 || ^5.0 || ^6.0",
        "phpunit/phpunit": "^7.5.15 || ^8.5.8 || ^9.3.3",
        "roave/security-advisories": "dev-master",
        "zing/coding-standard": "^2.6"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "autoload": {
        "psr-4": {
            "Zing\\LaravelSentry\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zing\\LaravelSentry\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint:rector": "@fix:rector --dry-run",
        "lint:ecs": "ecs check --ansi",
        "fix:rector": "rector process --ansi",
        "fix:ecs": "@lint:ecs --fix",
        "test:phpunit": "phpunit --colors=always",
        "lint": [
            "@lint:rector",
            "@lint:ecs"
        ],
        "fix": [
            "@fix:rector",
            "@fix:ecs"
        ],
        "test": [
            "@test:phpunit"
        ]
    }
}
