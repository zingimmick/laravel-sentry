{
    "name": "zing/laravel-sentry",
    "description": "Provides sentry context middleware.",
    "license": "MIT",
    "authors": [
        {
            "name": "zingimmick",
            "email": "zingimmick@outlook.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/container": "^6.0|^7.0|^8.0",
        "sentry/sentry-laravel": "^1.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.2.3",
        "orchestra/testbench": "^4.0|^5.0",
        "phpunit/phpunit": "^7.0|^8.0|^9.0",
        "roave/security-advisories": "dev-master",
        "zing/coding-standard": "^1.0"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "autoload": {
        "psr-4": {
            "Zing\\LaravelSentry\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zing\\LaravelSentry\\Tests\\": "tests"
        }
    },
    "scripts": {
        "ecs:test": "ecs check --ansi",
        "phpunit:test": "phpunit --color=always",
        "test": [
            "@ecs:test",
            "@phpunit:test"
        ],
        "fix": [
            "@ecs:test --fix"
        ]
    }
}
